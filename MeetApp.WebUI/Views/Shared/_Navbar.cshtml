@using MeetApp.Infrastructure.Services.Abstracts
@inject IDateTimeService dateTimeService;
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img style="width:40px" class="me-2" src="~/assets/icons/logo.png" />
                <span class="text-primary me-1">AZ</span> <span class="text-danger">Me</span> <span class="text-success">et</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex  justify-content-between ">
                <ul class="navbar-nav flex-grow-1 justify-content-end align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark text-capitalize">
                            @dateTimeService.ExecutingTime.ToString("HH:mm  •  ddd ,dd MMM")
                        </a>
                    </li>

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="account" asp-action="logout">LogOut</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="account" asp-action="signin">
                                    <img style="width:30px" src="~/assets/icons/user.png" />
                                </a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="account" asp-action="signin">Login</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>