@using MeetApp.Business.Modules.AccountModule.Commands.SigninCommand

@{
    Layout = null;
}

@model SigninRequest;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Design by foolishdeveloper.com -->
    <title>AZ Meet Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <section>
        <div class="container">
            <div class="form-container d-flex justify-content-center align-items-center mt-4 position-relative">
                <div class="background">
                    <div class="shape"></div>
                    <div class="shape"></div>
                </div>
                <form method="post">
                    <h3><a class="text-decoration-none" asp-action="index" asp-controller="home"><img class="logo" src="~/assets/icons/logo.png" />AZ Meet</a> Login</h3>

                    <label asp-for="Email"></label>
                    <input type="email" placeholder="Email or Phone" asp-for="Email">

                    <label asp-for="Password"></label>
                    <input type="password" placeholder="Password" asp-for="Password">
                    <div class="mt-2">
                        Don't you have an account? <a asp-action="register" asp-controller="account">Register</a>
                    </div>

                    <button>Log In</button>
                    <div class="social">
                        <div class="go">
                            <i class="fab fa-google"></i>  Google
                        </div>
                        <div class="fb"><i class="fab fa-facebook"></i>  Facebook</div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
</html>


